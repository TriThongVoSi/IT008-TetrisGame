<Window x:Class="Tetris_Game.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris_Game"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Register" Height="500" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../resources/assets/BackgroundRegister.png" Stretch="Fill"/>
        </Grid.Background>
        <TextBox x:Name="UserName"
            HorizontalAlignment="Left" 
            Margin="215,108,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="260" 
            Height="40"
            Background="Transparent"
            BorderThickness="0"
            FontSize="32"
            FontFamily="Impact"/>

        <Button x:Name="ButtonOk"
            HorizontalAlignment="Left" 
            Margin="284,428,0,0" 
            VerticalAlignment="Top" 
            Height="48" Width="68" 
            RenderTransformOrigin="0.896,0.559"
            BorderThickness="0" Click="ButtonOk_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <!-- Loại bỏ hiệu ứng mặc định -->
                    <Setter Property="OverridesDefaultStyle" Value="True"/>

                    <!-- Định dạng mặc định -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    <!-- Nền hình ảnh -->
                                    <Image Source="../resources/button/ButtonOk_Default.png" Stretch="Fill"/>
                                    <!-- Nội dung Button -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Mặc định không hiệu ứng -->
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>

                    <!-- Các Trigger -->
                    <Style.Triggers>
                        <!-- Trạng thái Hover (trỏ chuột vào) -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <!-- Giảm độ trong suốt -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    <!-- Phóng to -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Trạng thái Click (nhấn chuột) -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <!-- Giảm độ trong suốt thêm -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    <!-- Thu nhỏ -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="ButtonBack"
            HorizontalAlignment="Left" 
            Margin="151,428,0,0" 
            VerticalAlignment="Top" 
            Height="48" Width="68" 
            RenderTransformOrigin="0.896,0.559"
            BorderThickness="0" Click="ButtonBack_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <!-- Loại bỏ hiệu ứng mặc định -->
                    <Setter Property="OverridesDefaultStyle" Value="True"/>

                    <!-- Định dạng mặc định -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    <!-- Nền hình ảnh -->
                                    <Image Source="../resources/button/ButtonBack_Default.png" Stretch="Fill"/>
                                    <!-- Nội dung Button -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Mặc định không hiệu ứng -->
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>

                    <!-- Các Trigger -->
                    <Style.Triggers>
                        <!-- Trạng thái Hover (trỏ chuột vào) -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <!-- Giảm độ trong suốt -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    <!-- Phóng to -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Trạng thái Click (nhấn chuột) -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <!-- Giảm độ trong suốt thêm -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    <!-- Thu nhỏ -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <CheckBox x:Name="Male"
            HorizontalAlignment="Left" 
            Margin="276,358,0,0" 
            VerticalAlignment="Top"
            Background="Transparent" 
            Checked="Male_Checked" Height="15" Width="16"/>
        <CheckBox x:Name="Female"
            HorizontalAlignment="Left" 
            Margin="392,358,0,0" 
            VerticalAlignment="Top"
            Background="Transparent" Checked="Female_Checked" Height="15" Width="16"/>
        <PasswordBox x:Name="PassWord1"
                     HorizontalAlignment="Left" 
                     Margin="215,199,0,0" 
                     VerticalAlignment="Top"
                     Background="Transparent"
                     BorderThickness="0"
                     Width="260" 
                     Height="40"
                     FontSize="32"/>
        <PasswordBox x:Name="PassWord2"
            HorizontalAlignment="Left" 
            Margin="215,289,0,0" 
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Width="260" 
            Height="40"
            FontSize="32"/>
    </Grid>
</Window>
