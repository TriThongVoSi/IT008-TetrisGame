<Window x:Class="Tetris_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris_Game"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="MainWindow" Height="600" Width="800"
        MinWidth="600" MinHeight="600"
        Foreground="White"
        FontFamily="Impact" FontSize="28"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="../resources/assets/Background.jpg"/>
        </Grid.Background>

        <Button x:Name="ButtonControl"
                Grid.Column="2" 
                HorizontalAlignment="Left" 
                Margin="120,474,0,0" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Height="70" 
                Width="70"
                BorderThickness="0"
                Background="Transparent" 
                Click="ButtonControl_Click"
                Focusable="False">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <!-- Loại bỏ hiệu ứng mặc định -->
                    <Setter Property="OverridesDefaultStyle" Value="True"/>

                    <!-- Định dạng mặc định -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    <!-- Nền hình ảnh -->
                                    <Image x:Name="ButtonImage" Source="../resources/button/ButtonContinue_Default.png" Stretch="Fill"/>
                                    <!-- Nội dung Button -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Mặc định không hiệu ứng -->
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>

                    <!-- Các Trigger -->
                    <Style.Triggers>
                        <!-- Trạng thái Hover (trỏ chuột vào) -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <!-- Giảm độ trong suốt -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    <!-- Phóng to -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Trạng thái Click (nhấn chuột) -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.6"/>
                            <!-- Giảm độ trong suốt thêm -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    <!-- Thu nhỏ -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button x:Name="ButtonVolume"
                Grid.Column="2" 
                HorizontalAlignment="Left" 
                Margin="19,474,0,0" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                Height="70" 
                Width="70"
                BorderThickness="0"
                Click="ButtonVolume_Click"
                Focusable="False">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <!-- Loại bỏ hiệu ứng mặc định -->
                    <Setter Property="OverridesDefaultStyle" Value="True"/>

                    <!-- Định dạng mặc định -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    <!-- Nền hình ảnh -->
                                    <Image x:Name="ButtonImage" Source="../resources/button/ButtonUnmute_Default.png" Stretch="Fill"/>
                                    <!-- Nội dung Button -->
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Mặc định không hiệu ứng -->
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>

                    <!-- Các Trigger -->
                    <Style.Triggers>
                        <!-- Trạng thái Hover (trỏ chuột vào) -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <!-- Giảm độ trong suốt -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    <!-- Phóng to -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Trạng thái Click (nhấn chuột) -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.6"/>
                            <!-- Giảm độ trong suốt thêm -->
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    <!-- Thu nhỏ -->
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Image x:Name="StatusPlayer"
               Grid.Column="2" 
               HorizontalAlignment="Left" 
               Height="300" 
               Margin="19,169,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               Width="170"
               Stretch="Uniform"
               Source="../resources/assets/Status_Male.png">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.108"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Viewbox Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,20">
            <Canvas x:Name="GameCanvas"
                    Grid.Row ="1"
                    Grid.Column="1"
                    Background="#101010"
                    Width="250"
                    Height="500"
                    ClipToBounds="True"
                    Loaded="GameCanvas_Loaded"/>
        </Viewbox>

        <TextBlock x:Name="ScoreText"
                   Grid.Row="0"
                   Grid.Column="1"
                   Text=""
                   Margin="0,-1"
                   TextAlignment="Center"/>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right" Margin="0,183,19,0">
            <TextBlock Text="Hold"
                       TextAlignment="Center" FontWeight="Bold"/>
            <Image x:Name="HoldImage"
                   Margin="20"
                   Width="125"/>
        </StackPanel>

        <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" 
                    Margin="19,24,0,0" 
                    Grid.RowSpan="2">
            <TextBlock Text="Next"
                       TextAlignment="Center" 
                       Height="33" FontWeight="Bold"/>
            <Image x:Name="NextImage"
                   Margin="20"
                   Width="125"/>
        </StackPanel>

        <Grid x:Name="GameOverMenu"
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Visibility="Hidden">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="Game Over"
                           FontSize="48"
                           TextAlignment="Center"/>

                <TextBlock x:Name="FinalScoreText"
                           Text="Score: "
                           FontSize="36"
                           TextAlignment="Center"/>

                <Button x:Name="PlayAgain"
                        Content="Play Again"
                        Background="LightGreen"
                        Margin="0,20,0,0"
                        Padding="5"
                        Click="PlayAgain_Click"/>
            </StackPanel>
        </Grid>
        
        <Grid x:Name="PauseMenu"
              Background="#CC000000"
              Grid.RowSpan="2"
              Grid.ColumnSpan="3"
              Visibility="Collapsed">
        </Grid>
        
        <TextBox x:Name="GoalScore"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="124,296,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="40" 
                 Height="18"
                 FontSize="15"
                 BorderThickness="0"
                 Background="Transparent"
                 FontFamily="Impact"
                 Text="0" Cursor="None"/>

        <TextBox x:Name="OldLevel"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="128,318,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="40" 
                 Height="18"
                 FontSize="15"
                 BorderThickness="0"
                 Background="Transparent"
                 FontFamily="Impact"
                 Text="1" Cursor="None"/>

        <TextBox x:Name="Score"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="131,354,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="40" 
                 Height="18"
                 FontSize="15"
                 BorderThickness="0"
                 Background="Transparent"
                 FontFamily="Impact"
                 Text="0" Cursor="None"/>

        <TextBox x:Name="NewLevel"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="129,375,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="40" 
                 Height="18"
                 FontSize="15"
                 BorderThickness="0"
                 Background="Transparent"
                 FontFamily="Impact"
                 Text="1" Cursor="None"/>

        <TextBox x:Name="GoalTime"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="124,410.5,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="58" 
                 Height="15"
                 FontSize="15"
                 BorderThickness="0"
                 Background="Transparent"
                 FontFamily="Impact"
                 Text="00:00" Cursor="None"/>

        <TextBox x:Name="NewTime"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="124,431.5,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="58" 
                 Height="15"
                 FontSize="15"
                 BorderThickness="0"
                 Background="Transparent"
                 FontFamily="Impact"
                 Text="00:00" Cursor="None"/>

        <TextBox x:Name="Player"
                 IsReadOnly="True"
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Margin="80,252,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="87" 
                 Height="21"
                 FontSize="16"
                 BorderThickness="0"
                 Background="Transparent" 
                 Text="NamePlayer" Cursor="None"/>
    </Grid>

</Window>
