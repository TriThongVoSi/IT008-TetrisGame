<Window x:Class="Tetris_Game.Player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris_Game"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="Player" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../resources/assets/BackgroundPlayer.png" Stretch="Fill"/>
        </Grid.Background>

        <Button HorizontalAlignment="Left" 
                Margin="214,197,0,0" 
                VerticalAlignment="Top" 
                Height="40" Width="60" 
                RenderTransformOrigin="0.896,0.559"
                BorderThickness="0" Click="Button_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Image Source="../resources/button/ButtonOk_Default.png" Stretch="Fill"/>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <TextBox x:Name="NamePlayer"
                 HorizontalAlignment="Left" 
                 Margin="172,81,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="205" 
                 Height="30"
                 Background="Transparent"
                 BorderThickness="0"
                 FontSize="25"
                 FontFamily="Impact"/>
        <Label x:Name="Register"
               Content="Register" 
               HorizontalAlignment="Left" 
               Margin="307,169,0,0" 
               VerticalAlignment="Top" 
               Height="33"
               FontSize="16" 
               Cursor="Hand" 
               Width="68" 
               MouseDown="Register_MouseDown"
               Foreground="#ddd"/>
        <PasswordBox x:Name="PassWord"
            HorizontalAlignment="Left" 
            Margin="172,139,0,0" 
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Width="205" 
            Height="30"
            FontSize="25"/>
        <Button x:Name="ButtonBack"
            HorizontalAlignment="Left" 
            Margin="129,197,0,0" 
            VerticalAlignment="Top" 
            Height="40" Width="60" 
            RenderTransformOrigin="0.896,0.559"
            BorderThickness="0" Click="ButtonBack_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Grid>
                                    <Image Source="../resources/button/ButtonBack_Default.png" Stretch="Fill"/>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Opacity" Value="1"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>


</Window>
